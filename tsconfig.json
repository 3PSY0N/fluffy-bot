{
  "compilerOptions": {
    "rootDir": "src",
    "sourceMap": true,
    "outDir": "dist",
    "target": "es2020",
    "module": "es2020",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "reflect-metadata"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"]
}
